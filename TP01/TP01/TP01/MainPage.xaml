    <StackLayout Orientation="Vertical" Padding="20">
        <Label HorizontalOptions="Center"
               VerticalOptions="Center"
               Text="Aplicação Teste!" />

        <StackLayout Orientation="Horizontal">
            <Label 
                VerticalOptions="Center"
                Text="ID:" 
            />
            <Entry 
                x:Name="Id"
                VerticalOptions="Center"
                HorizontalOptions="FillAndExpand"
            />
        </StackLayout>

        <StackLayout Orientation="Horizontal">
            <Label 
                VerticalOptions="Center"
                Text="Pass:" 
            />
            <Entry 
                x:Name="Password"
                VerticalOptions="Center"
                HorizontalOptions="FillAndExpand"
                IsPassword="True"
            />
        </StackLayout>
        
        <Button 
            Text="Ok"
            Clicked="OnClickOk"
        />
        <Button 
            Text="Limpar"
            Clicked="OnClickLimpar"
        />
        <Button 
            Text="Creditos"
            Clicked="OnClickCreditos"
        />
        
    </StackLayout>




