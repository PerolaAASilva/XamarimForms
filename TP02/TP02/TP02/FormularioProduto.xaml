<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP02.FormularioProduto">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Formulário Produto!"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" />

                <Label Text="ID:"/>
                <Entry x:Name="id"/>

                <Label Text="Descrição:"/>
                <Entry x:Name="descricao"/>

                <Label Text="Categoria:"/>
                <Entry x:Name="categoria"/>

                <Label Text="Quantidade:"/>
                <Entry x:Name="quantidade"/>

                <Label Text="Preço:"/>
                <Entry x:Name="preco"/>

                <Button x:Name="submit" Text="Enviar" Clicked="Enviar_clicked" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>