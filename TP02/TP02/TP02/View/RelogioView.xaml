<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP02.ViewModel.RelogioView">
    <ContentPage.Content>
        <StackLayout Padding="5" Spacing="1">
            <Entry x:Name="entryPesquisa" Placeholder="Pesquisa" HorizontalOptions="FillAndExpand"/>
            <Button x:Name="btnEnviar" Text="ALTERAR ESTILO" HorizontalOptions="FillAndExpand"/>
            <Label Text="Horário" Font="20" HorizontalOptions="CenterAndExpand"/>
            <Label Text="{Binding Tempo}"  HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>